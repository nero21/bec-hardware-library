<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

    <Button
            style="@style/Base.Widget.AppCompat.Button.Colored"
            android:text="打开打印机串口"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/btn_open"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="8dp"/>

    <Button
            style="@style/Base.Widget.AppCompat.Button.Colored"
            android:text="关闭打印机串口"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/btn_close"
            app:layout_constraintTop_toBottomOf="@+id/btn_open"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

    <Button
            style="@style/Base.Widget.AppCompat.Button.Colored"
            android:text="发送打印机数据"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/btn_send"
            app:layout_constraintTop_toBottomOf="@+id/btn_close"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

    <Button
            style="@style/Base.Widget.AppCompat.Button.Colored"
            android:text="检查打印机连接"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/btn_check_link"
            app:layout_constraintTop_toBottomOf="@+id/btn_send"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>

    <Button
            style="@style/Base.Widget.AppCompat.Button.Colored"
            android:text="连接串口秤"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/btn_open_scales"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@+id/btn_check_link"/>

    <Button
            style="@style/Base.Widget.AppCompat.Button.Colored"
            android:text="断开串口秤"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/btn_close_scales"
            app:layout_constraintTop_toBottomOf="@+id/btn_open_scales"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

    <Button
            style="@style/Base.Widget.AppCompat.Button.Colored"
            android:text="获取串口秤读数"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/btn_read_scales"
            app:layout_constraintTop_toBottomOf="@+id/btn_close_scales"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

    <Button
            style="@style/Base.Widget.AppCompat.Button.Colored"
            android:text="检查串口秤连接"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/btn_check_scales_link"
            app:layout_constraintTop_toBottomOf="@+id/btn_read_scales"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

</android.support.constraint.ConstraintLayout>